@inject ILocalizer _loc
@model ConfirmCodeViewModel

"use strict";
(function() {

const validEmail = window.__validEmail;

new Vue({
el:"#app",
data: {
	token: '@Model.Token',
	email: '@Model.Email',
	confirmCode:'',
	submitted: false,
	serverError: '',
},
computed: {
	valid() {
		return !!this.confirmCode;
	}
},
methods: {
	success(msg) {
		alert(msg);
	},
	fail(msg) {
		alert(msg);
	},
	async submitCode() {
		this.submitted = true;
		if (!this.valid) return;
		let formData = new URLSearchParams();
		formData.append('Email', this.email);
		formData.append('Code', this.confirmCode);
		formData.append('Token', this.token);
		formData.append('__RequestVerificationToken', '@Model?.RequestToken');
		let resp = await fetch('/account/confirmcode', {
			method: 'POST',
			body: formData
		});
		if (resp.redirected)
			window.location.assign(resp.url);
		else if (resp.ok) {
			let result = await resp.json();
			if (result.success)
				this.success(result.message);
			else
				this.fail(result.message);
		}
	}
}
});
})();
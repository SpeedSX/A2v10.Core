
@model RegisterViewModel
@inject ILocalizer _loc

<div class="center-page">
	<div class="initial-form">
		<h3 class="a2-header text-center">@_loc.Localize("@[RegisterPrompt]")</h3>
		<hr style="margin-top:1rem" />
		<form method=post novalidate=novalidate>
			<div class="control-group" v-class="{invalid: !validEmail}">
				<label for="login" style="grid-row:1; grid-column:1" class="a2-label required">@_loc.Localize("@[Email]")</label>
				<div class="input-group">
					<input v-focus class="control" id="login" name="email" type="text" v-model="email" tabindex="1" v-on:keyup.enter="onLoginEnter" autocomplete="email" spellcheck="false" />
					<div class="validator">
						<span class="error" v-text="emailError"></span>
					</div>
				</div>
			</div>
			<div class="control-group" v-class="{invalid: !validPassword}">
				<label v-for="password" style="grid-row:2; grid-column:1" class="a2-label required">@_loc.Localize("@[Password]")</label>
				<div class="input-group">
					<input class="control" v-focus type="password" id="password" name="password" v-model="password" autocomplete="current-password" tabindex="2" v-on:keydown.enter.stop.prevent="onPwdEnter" ref="pwd" />
					<div class="validator" v-if="false">
						<span class="error">Придумайте пароль</span>
					</div>
				</div>
			</div>

			<button v-on:click.stop.prevent="submit" class="btn btn-default" ref="submit" tabindex="4">@_loc.Localize("@[Register]")</button>
		</form>
	</div>
</div>

@section Scripts
{
<script type="text/javascript">
	@Html.Partial("~/Views/Account/RegisterScript.cshtml")
</script>
}